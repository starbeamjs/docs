.VPDoc {
  span.codicon[class*="codicon-"] {
    display: grid;
    grid-template-columns: max-content 0.3em;
    font-size: 24px;

    &::after {
      content: "";
    }
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    &.section-head {
      display: grid;
      grid-template-columns: max-content max-content 1fr max-content;
      align-items: center;

      > :is(span.material-symbols-outlined, span.codicon) {
        margin-inline-end: 0.2ch;
      }

      a.header-anchor {
        float: initial;
        padding: initial;
        margin: 0 0 0 var(--sb-gap);
      }
    }
  }

  section {
    > section {
      margin-block-start: 1rem;
    }

    &.head-notes {
      h1 {
        border-block-start: 1px solid var(--vp-c-divider-light);
        padding-top: 1rem;
      }
    }

    &.group,
    &.card-container {
      > :is(h1, h2, h3, h4, h5, h6) {
        margin: 0;
      }
    }

    &.group {
      margin-block-start: 2rem;
    }

    &.card-container {
      margin-block-start: 1rem;
    }

    :is(&.card-container, &.card) + section.card-container {
      margin-block-start: 2rem;
    }

    &:not(.card) + section.card {
      margin-block-start: 2rem;
    }

    &.card + section.card {
      margin-block-start: 1rem;
    }

    &.card {
      display: grid;
      padding: 1.3em 1em;
      border-radius: 4px;
      box-shadow: 0 2px 1px -1px rgb(0 0 0 / 20%), 0 1px 1px 0 rgb(0 0 0 / 14%),
        0 1px 3px 0 rgb(0 0 0 / 12%);
      border: 1px solid var(--vp-c-divider-light);

      :first-child {
        margin-block-start: 0;
      }

      :last-child {
        margin-block-end: 0;
      }
    }

    & + section.signature.card {
      margin-block-start: 5rem;
    }

    &.signature {
      border-block-start: 5px solid var(--vp-c-divider-light);

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        margin: 0;
        padding: 0;
        border: none;
      }
    }
  }
}
