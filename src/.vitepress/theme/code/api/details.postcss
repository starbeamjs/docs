.VPDoc {
  details.container {
    border: 1px solid var(--inactive-color-bg);
    border-radius: var(--sb-radius-xsm);
    background-color: var(--sb-inline-light-bg-c);
    color: var(--inactive-color-brighter);
    padding: 0.5em;

    summary {
      color: var(--inactive-color-fg);
      margin: 0;
    }

    &[open] summary {
      border-bottom: 2px solid var(--inactive-color-fg);
      padding-block-end: 0.5em;
    }

    &[open] summary + * {
      margin-block-start: 0.5em;
    }
  }

  details {
    --protip-icon: var(--sb-icon-protip);
    --expand-icon: "chevron_right";
    --contract-icon: "expand_more";
    --between-icons: var(--sb-icon-between);
    --after-icons: var(--sb-icon-after);

    > summary::before {
      font-family: var(--icons);
    }
  }

  details.protip {
    > summary::before {
      content: var(--expand-icon) var(--between-icons) var(--protip-icon)
        var(--after-icons);
    }

    &[open] > summary::before {
      content: var(--contract-icon) var(--between-icons) var(--protip-icon)
        var(--after-icons);
    }
  }

  details.deep-dive {
    summary span {
      border: 1px solid var(--vp-badge-tip-border);
      background-color: var(--vp-badge-tip-bg);
      border-radius: var(--sb-radius-sm);
      color: var(--vp-badge-tip-text);
      margin-inline-end: 0.5em;
      padding-inline-end: 0.3em;
    }

    summary span::before {
      line-height: 1;
      content: "ðŸ¤¿";
    }
  }

  details[open] summary::before {
    content: "expand_more";
  }
  summary {
    display: grid;
    grid-template-columns: max-content max-content 1fr;
    align-items: center;
    cursor: pointer;

    &::before {
      font-size: 1.5em;

      font-family: var(--icons);
      content: "chevron_right";
    }
  }

  details:not([open]) summary {
    margin: 0;
    cursor: pointer;
  }
}
