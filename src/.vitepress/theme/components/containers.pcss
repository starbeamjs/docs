.vp-doc .custom-block {
  padding: var(--starbeam-container-padding);

  > h3 {
    margin-block: var(--starbeam-container-padding);
  }

  &.warning {
    --block-hue: 45;
  }

  &.info {
    --block-hue: 208;
  }

  &.tip {
    --block-hue: 153;
  }

  &.danger {
    --block-hue: 353;
  }

  :not(pre) > code {
    background-color: hsl(
      var(--block-hue),
      var(--starbeam-bg-saturation),
      var(--starbeam-bg-lightness-brighter)
    );

    color: hsl(
      var(--block-hue),
      var(--starbeam-fg-saturation),
      var(--starbeam-fg-lightness-bright)
    );

    padding: var(--starbeam-nested-inline-code-padding);
    font-family: var(--vp-font-family-mono);
    font-weight: var(--starbeam-font-weight-body);
  }

  &.info {
    > .custom-block-title {
      display: grid;
      grid-template-columns: auto 1fr;
      grid-gap: 0.2rem;

      &::before {
        content: "💁";
      }
    }
  }

  em {
    font-weight: var(--starbeam-font-weight-em);
    background-color: var(--vp-c-yellow-lighter);
  }
}
