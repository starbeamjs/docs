{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "build",
    "target": "esnext",
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,

    "resolveJsonModule": true,
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,

    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@tutorial-lib/*": ["./src/tutorial/$components/code/*"],
      "@tutorial-vue/*": ["./src/tutorial/$components/*"]
    },
    "types": ["vite/client", "@vue/runtime-dom", "src/components.d.ts"]
  },
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.md",
    "packages/*/index.ts",
    "packages/*/src/**/*",
    "./src/vite.config.ts",
    ".ignore/instances.md.ts"
  ],
  "exclude": ["./src/frameworks/**", "./src/**/*.tsx", "src/vite.config.ts"],
  "vueCompilerOptions": {}
}
