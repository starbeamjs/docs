# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
max_line_length = 100
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.md]
max_line_length = 65

[*.tsx]
max_line_length = 65

[*.ts]
max_line_length = 65