{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "node_modules": true,
    "docs": true,
    "vitepress": true
  },

  "editor.wordWrap": "bounded",
  "files.associations": {
    "tsconfig.*.json": "jsonc"
  },
  "codeium.enableConfig": {
    "*": true
  },
  "[postcss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": ["source.fixAll.stylelint", "source.formatDocument"]
  },
  "prettier.resolveGlobalModules": true,
  "[markdown]": {
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.invisibleCharacters": false,
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js, ${capture}.ts.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-*.yaml, .npmrc, .markdownlint.json"
  },
  "explorer.excludeGitIgnore": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "docs": true
  },

  "[typescript]": {
    "editor.rulers": [
      {
        "column": 80,
        "color": "#e5e5e5"
      },
      {
        "column": 100,
        "color": "#e5b5b5"
      }
    ]
  },
  "[typescriptreact][markdown]": {
    "editor.rulers": [
      {
        "column": 65,
        "color": "#e5b5b5"
      }
    ]
  },

  "[vue][scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.tabSize": 2,
    "editor.autoIndent": "keep",
    "gitlens.codeLens.scopes": ["document"],
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    }
  },

  "volar.vueserver.noProjectReferences": true,
  "volar.vueserver.vitePress.processMdFile": true,

  "yaml.schemaStore.enable": true,
  "yaml.schemas": {
    "./packages/api-docs/dist/api.schema.json": "/src/api/**/*.yml"
  },
  "yaml.trace.server": "messages",

  "postcss.validate": false,
  "stylelint.packageManager": "pnpm",
  "stylelint.snippet": ["css", "less", "postcss"],
  "stylelint.validate": ["css", "less", "postcss"],
  "cssvar.files": ["**/*.postcss"],
  "cssvar.extensions": [
    "css",
    "scss",
    "sass",
    "less",
    "postcss",
    "vue",
    "svelte",
    "astro",
    "ts",
    "tsx",
    "js",
    "jsx"
  ],
  "cssvar.ignore": [
    "**/.git/**",
    "**/.svn/**",
    "**/.hg/**",
    "**/CVS/**",
    "**/.DS_Store/**",
    "**/.git/**",
    "**/node_modules/**",
    "**/bower_components/**",
    "**/tmp/**",
    "**/dist/**",
    "**/tests/**"
  ],
  "cssvar.themes": ["dark"],
  "cssVariables.lookupFiles": ["**/*.postcss", "src/.vitepress/**/*.postcss"],
  "cssVariables.blacklistFolders": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/.git",
    "**/node_modules",
    "**/bower_components",
    "**/tmp",
    "**/dist",
    "**/tests"
  ],
  "json.schemas": [
    {
      "fileMatch": ["src/api/**/$api/*.json", "src/api/**/$api/*.jsonc"],
      "url": "./packages/api-docs/dist/api.schema.json"
    }
  ],

  "files.trimTrailingWhitespace": false,
  "typescript.tsdk": "node_modules/typescript/lib",
  "cssVariables.trace.server": "verbose",
  "todo-tree.general.showActivityBarBadge": true,
  "todo-tree.filtering.useBuiltInExcludes": "file excludes",
  "todo-tree.filtering.includeGlobs": [],
  "todo-tree.filtering.includeHiddenFiles": true,
  "todo-tree.filtering.excludeGlobs": ["**/node_modules/**", "docs/**"],
  "todo-tree.filtering.scopes": [
    {
      "name": "all",
      "includeGlobs": ["**/*"]
    },
    {
      "name": "docs",
      "includeGlobs": ["src/**/*.{md,ts,vue}"],
      "excludeGlobs": ["src/.vitepress/**"]
    },
    {
      "name": "packages",
      "includeGlobs": ["packages/**/*", "src/.vitepress/packages/**/*.{ts,vue}"],
      "excludeGlobs": ["**/node_modules/**"]
    },
    {
      "name": "vitepress config",
      "includeGlobs": ["src/.vitepress/**/*.{ts,vue}"],
      "excludeGlobs": ["src/.vitepress/cache/**"]
    }
  ],
  "todo-tree.tree.scanAtStartup": false,
  "todo-tree.tree.showCountsInTree": true,
  "todo-tree.tree.showCurrentScanMode": true,
  "todo-tree.tree.scanMode": "workspace only",
  "todo-tree.tree.buttons.groupBySubTag": true,
  "todo-tree.tree.buttons.scanMode": true
}
