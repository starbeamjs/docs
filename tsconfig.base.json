{
  "extends": "./tsconfig.strict.json",
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "build",
    "target": "esnext",
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,

    "resolveJsonModule": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,

    "skipLibCheck": true,

    "types": ["vite/client", "@vue/runtime-dom", "src/components.d.ts"]
  }
}
